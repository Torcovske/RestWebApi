@using Data.Entities
@model Authors
@{
    ViewData["Title"] = "Детали";
}
<div>
<h4>Дополнительная информация</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ФИО
        </dt>
        <dd class="col-sm-10">
            @Model.LastName @Model.FirstName @Model.MiddleName
        </dd>
         <dt class="col-sm-2">
            Количество книг: 
        </dt>
        <dd class="col-sm-10">
            @Model.AuthorsBooks.Count
        </dd>
        <dt class="col-sm-2">
            Названия:
        </dt>
        @foreach(var book in Model.AuthorsBooks)
        {
             <dd class="col-sm-10">
             @book.Books.Name
            </dd>
             <dt class="col-sm-2">
        </dt>
        }
       

        </dl>
</div>


@using Data.Entities
@model Authors
@{
    ViewBag.Title = "Удаление";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
             @Model.LastName @Model.FirstName @Model.MiddleName
        </dd>
    </dl>
 
    <div>
        <form asp-controller="Author" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>